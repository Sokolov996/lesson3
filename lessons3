#Task1
def div(*args):
    try:
        arg1 = int(input("Введите первое число "))
        arg2 = int(input("Введите второе число "))
        res = arg1 / arg2
    except ValueError:
        return 'Ошибка'
    except ZeroDivisionError:
        return "Не правильный делитель! Ноль не используется"
    return res

    if arg2 != 0:
        return arg1 / arg2
    else:
        print("Ноль не может использоваться")

print(f'result  {div()}')

#Task3
def my_func(arg1 , arg2, arg3):
    if arg1 >= arg3 and arg2 >= arg3:
        return arg1 + arg2
    elif arg1 > arg2 and arg1 < arg3:
        return arg1 + arg3
    else:
        return arg2 + arg3

print(f'Result - {my_func(int(input("первое число? ")), int(input("второе число? ")), int(input("третье число? ")))}')

#Task6
def int_func (*args):
    word = input("Введите слово ")
    print(word.title())
